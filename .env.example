JIRA_HOST=https://your-domain.atlassian.net
JIRA_EMAIL=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token

# Optional auth backend: SuperTokens (recommended for multi-user + RBAC scaling)
# Set SUPERTOKENS_ENABLED=true to turn on SuperTokens session validation.
# Hybrid mode keeps legacy login working while accepting SuperTokens sessions.
SUPERTOKENS_ENABLED=false
SUPERTOKENS_HYBRID_MODE=true
SUPERTOKENS_CONNECTION_URI=http://localhost:3567
SUPERTOKENS_API_KEY=
SUPERTOKENS_APP_NAME=VodaAgileBoard
SUPERTOKENS_API_DOMAIN=http://localhost:3000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000
SUPERTOKENS_API_BASE_PATH=/auth
SUPERTOKENS_WEBSITE_BASE_PATH=/auth

# Optional shared cache (recommended for multi-instance deployments)
CACHE_BACKEND=memory
